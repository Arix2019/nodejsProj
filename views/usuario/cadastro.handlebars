<div class="card">
    <div class="alert alert-primary"><h4>Cadastro de Usuário:</h4></div>
    <div class="card-body">
        <form action="/usuario/cadastro/sucesso" method="POST">         
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="nome">Nome:</label>
                    <input type="text" class="form-control" minlength="3" maxlength="50" name="nome" id="nome" required placeholder="Informe seu nome:">
                </div>
                <div class="form-group col-md-6">
                    <label for="sobrenome">Sobrenome</label>
                    <input type="text" class="form-control" minlength="3" maxlength="80" name="sobrenome" id="sobrenome" required placeholder="Informe seu Sobrenome:">
                </div>
            </div>
            <div class="form-group">
                <label for="email">E-Mail:</label>
                <input type="email" class="form-control" name="email" id="email" required placeholder="Ex: seunome@email.com">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="senha">Senha:</label>
                    <input type="password" class="form-control" minlength="5" maxlength="12" name="senha" id="senha" required placeholder="senha:">
                    <small>*Minimo de 5 e máximo de 12 caracteres.</small>
                </div>
                <div class="form-group col-md-6">
                    <label for="testSenha">Repetir Senha:</label>
                    <input type="password" class="form-control" minlength="5" maxlength="12" name="testSenha" id="testSenha" required placeholder="Repita sua senha:">
                    <small>*Minimo de 5 e máximo de 12 caracteres.</small>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
    </div>
</div>
